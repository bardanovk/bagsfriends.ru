<h1>Занести поставку</h1>

<form action="/manage/products/shipments/create" method="POST">
    <div class="mb-3">
        <label for="product" class="form-label">Товар</label>
        <select class="form-select" aria-label="Default select example" name="product">
            {{#if products.length}}
            <option selected disabled>Выберите товар</option>
            {{#each products}}
            <option value="{{_id}}">{{prodTitle}}</option>
            {{/each}}
            {{else}}
            <option selected disabled>Товаров не найдено</option>
            {{/if}}
        </select>
    </div>
    <div class="mb-3">
        <label for="count" class="form-label">Количество</label>
        <input type="number" class="form-control" id="count" name="count">
    </div>
    <button type="submit" class="btn btn-primary">Занести</button>
</form>
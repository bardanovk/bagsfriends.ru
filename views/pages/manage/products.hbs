<h2>Товары</h2>
<a href="/manage/products/create"><button>Создать товар</button></a>



{{#if products.length}}

<ul>
    {{#each products}}
    <li>
        <label>
            <span>
                <img src="../image/products/{{prodTitle}}/Main.jpg" alt="картинка" width="50">
                {{prodTitle}}
                {{category}}
                <div style="display:none" name="prodId">{{_id}}</div>
            </span> <a href="./products/edit/{{_id}}"><button type="button">Edit</button></a>
        </label>
    </li>
    {{/each}}
</ul>
{{else}}
<h3>Товаров нет!</h3>
{{/if}}
{{#if products.length}}
<div class="product-container">
    {{#each products}}
    <div class="product-card">
        <div class="product-image" id="product-{{_id}}"></div>
        <div class="product-title">{{prodTitle}}</div>
        <div class="product-price">{{price}}</div>
        <style>
            #product-{{_id}}{
                background-image: url(../../../image/products/{{prodTitle}}/Main.jpg)
            }

            #product-{{_id}}:hover {
                background-image: url(../../../image/products/{{prodTitle}}/1.jpg)
            }
        </style>
    </div>
    {{/each}}
</div>
{{else}}
<h1>Товаров не найдено</h1>
{{/if}}
